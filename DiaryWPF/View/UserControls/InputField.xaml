<UserControl x:Class="DiaryWPF.View.UserControls.InputField"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DiaryWPF.View.UserControls"
             mc:Ignorable="d" 
             Height="45" Width="250">
    <Grid >
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Label Grid.Row="0" MinHeight="15" Content="{Binding FieldCaption}" FontWeight="Bold" Padding="0" HorizontalAlignment="Left"/>
        <TextBox TextWrapping="Wrap" VerticalContentAlignment="Center" VerticalAlignment="Top" Height="27" Grid.Row="1" Margin="0,2,0,0"/>
    </Grid>
</UserControl>
