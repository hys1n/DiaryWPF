<Window x:Class="DiaryWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DiaryWPF"
        xmlns:UserControls="clr-namespace:DiaryWPF.View.UserControls"
        mc:Ignorable="d"
        Title="MainWindow" Height="436" Width="810" MinWidth="800" MinHeight="450">
    <Window.Resources>
        <Style x:Key="GridCellBorderStyle" TargetType="Border">
            <Setter Property="BorderBrush" Value="Black"/>
            <Setter Property="BorderThickness" Value="1, 0, 0, 1"/>
            <Setter Property="Grid.Row" Value="1"/>
        </Style>
        <Style x:Key="GridCellDayBlockBorderStyle" TargetType="Border">
            <Setter Property="BorderBrush" Value="Black"/>
            <Setter Property="BorderThickness" Value="1, 1, 0, 1"/>
            <Setter Property="Grid.Row" Value="0"/>
        </Style>
    </Window.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Rectangle Grid.Column="0" Fill="#efeded"/>
        <Grid VerticalAlignment="Top"  Margin="20,52,0,0" HorizontalAlignment="Left" Height="Auto" Width="140">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <UserControls:IconButton x:Name="btnAddTask" Icon="Plus" Placeholder="Add task" Margin="0, 10, 0, 5" VerticalAlignment="Center" HorizontalAlignment="Center" Height="37" Width="120"/>
            <UserControls:IconButton x:Name="btnInbox" Icon="Inbox" Placeholder="Inbox" Margin="0, 10, 0, 5" Grid.Row="1"  VerticalAlignment="Center" HorizontalAlignment="Center" Height="37" Width="120"/>
            <UserControls:IconButton x:Name="btnMyLists" Icon="Check" Placeholder="My lists" Margin="0, 5, 0, 5"  Grid.Row="2" VerticalAlignment="Center" HorizontalAlignment="Center" Height="37" Width="120"/>
            <UserControls:IconButton x:Name="btnCalendar" Icon="Calendar" Placeholder="Calendar" Margin="0, 5, 0, 5"  Grid.Row="3" VerticalAlignment="Center" HorizontalAlignment="Center" Height="37" Width="120" Loaded="btnCalendar_Loaded"/>
        </Grid>
        <Grid Grid.Column="1" Margin="10,10,10,10">
            <Grid.RowDefinitions>
                <RowDefinition Height="42"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Grid Grid.Row="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <TextBlock FontSize="18" FontWeight="Bold" VerticalAlignment="Center" HorizontalAlignment="Left">
                        May 2024
                </TextBlock>
                <DatePicker Grid.Column="1" HorizontalAlignment="Right" VerticalAlignment="Center"/>
            </Grid>
            <Grid Grid.Row="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <!--Borders for grid elements-->
                <Border Grid.Column="0" Style="{StaticResource GridCellDayBlockBorderStyle}"/>
                <Border Grid.Column="1" Style="{StaticResource GridCellDayBlockBorderStyle}"/>
                <Border Grid.Column="2" Style="{StaticResource GridCellDayBlockBorderStyle}"/>
                <Border Grid.Column="3" Style="{StaticResource GridCellDayBlockBorderStyle}"/>
                <Border Grid.Column="4" Style="{StaticResource GridCellDayBlockBorderStyle}"/>
                <Border Grid.Column="5" Style="{StaticResource GridCellDayBlockBorderStyle}"/>
                <Border Grid.Column="6" Style="{StaticResource GridCellDayBlockBorderStyle}"  BorderThickness="1"/>

                <Border Grid.Column="0" Grid.Row="1" Style="{StaticResource GridCellBorderStyle}" BorderThickness="1, 0, 0, 1"/>
                <Border Grid.Column="1" Style="{StaticResource GridCellBorderStyle}"/>
                <Border Grid.Column="2" Style="{StaticResource GridCellBorderStyle}"/>
                <Border Grid.Column="3" Style="{StaticResource GridCellBorderStyle}"/>
                <Border Grid.Column="4" Style="{StaticResource GridCellBorderStyle}"/>
                <Border Grid.Column="5" Style="{StaticResource GridCellBorderStyle}"/>
                <Border Grid.Column="6" Style="{StaticResource GridCellBorderStyle}" BorderThickness="1, 0, 1, 1"/>

                <UserControls:DayBlock Grid.Row="0" Grid.Column="0"/>
                <UserControls:DayBlock Grid.Row="0" Grid.Column="1"/>
                <UserControls:DayBlock Grid.Row="0" Grid.Column="2"/>
                <UserControls:DayBlock Grid.Row="0" Grid.Column="3"/>
                <UserControls:DayBlock Grid.Row="0" Grid.Column="4"/>
                <UserControls:DayBlock Grid.Row="0" Grid.Column="5"/>
                <UserControls:DayBlock Grid.Row="0" Grid.Column="6"/>
            </Grid>
        </Grid>
    </Grid>
</Window>
