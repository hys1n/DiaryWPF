<Window x:Class="DiaryWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DiaryWPF"
        xmlns:UserControls="clr-namespace:DiaryWPF.View.UserControls"
        mc:Ignorable="d"
        Title="MainWindow" Height="436" Width="810" MinWidth="800" MinHeight="450">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid Background="LightBLue" VerticalAlignment="Top"  Margin="10" HorizontalAlignment="Left" Height="{Binding ActualHeight, RelativeSource={RelativeSource AncestorType={x:Type Window}}}" Width="140">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <UserControls:IconButton Icon="Inbox" Placeholder="Inbox" Margin="0, 10, 0, 5" VerticalAlignment="Center" HorizontalAlignment="Center" Height="37" Width="120"/>
            <UserControls:IconButton Icon="Check" Placeholder="My lists" Margin="0, 5, 0, 5"  Grid.Row="1" VerticalAlignment="Center" HorizontalAlignment="Center" Height="37" Width="120"/>
            <UserControls:IconButton Icon="Calendar" Placeholder="Calendar" Margin="0, 5, 0, 5"  Grid.Row="2" VerticalAlignment="Center" HorizontalAlignment="Center" Height="37" Width="120"/>
        </Grid>
        <Grid Grid.Column="1" Margin="10,10,10,10">
            <Grid.RowDefinitions>
                <RowDefinition Height="42"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <DockPanel>
                <Grid DockPanel.Dock="Top" Grid.Row="0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock FontSize="18" FontWeight="Bold" VerticalAlignment="Center" HorizontalAlignment="Left">
                        May 2024
                    </TextBlock>
                    <DatePicker Grid.Column="1" HorizontalAlignment="Right" VerticalAlignment="Center"/>
                </Grid>
            </DockPanel>
            <!--<Grid Grid.Row="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="1*"/>
                    <RowDefinition Height="9*"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
            </Grid>-->
        </Grid>
    </Grid>
</Window>
