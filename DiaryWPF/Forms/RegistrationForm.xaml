<Window x:Class="Diary.Forms.RegistrationForm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Diary.Forms" xmlns:UserControls="clr-namespace:Diary.Views.UserControls"
        mc:Ignorable="d"
        Title="RegistrationForm" SizeToContent="WidthAndHeight" ResizeMode="NoResize" WindowStartupLocation="CenterScreen">
    <Grid Height="332" Width="300">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <Label Name="rfName" Grid.Row="0" Content="Create account" FontWeight="Bold" FontSize="28" Padding="0" HorizontalAlignment="Left" Margin="25,25,0,0" VerticalAlignment="Top"/>

            <Label Grid.Row="1" Height="15" Content="User name" FontWeight="Bold" Padding="0" HorizontalAlignment="Left" Margin="25,8,0,308"/>
            <TextBox Text="{Binding UserName, ValidatesOnDataErrors=True, UpdateSourceTrigger=PropertyChanged}" ToolTip="{Binding ErrorCollection[UserName]}" Grid.Row="1" x:Name="textBoxUserName" VerticalContentAlignment="Center" VerticalAlignment="Top" Height="27" Margin="25,26,25,0">
            </TextBox>

            <Label Grid.Row="1" Height="15" Content="Email" FontWeight="Bold" Padding="0" HorizontalAlignment="Left" Margin="25,63,0,253"/>
            <TextBox Text="{Binding Email, ValidatesOnDataErrors=True, UpdateSourceTrigger=PropertyChanged}" ToolTip="{Binding ErrorCollection[Email]}" Grid.Row="1" x:Name="textBoxEmail" VerticalContentAlignment="Center" VerticalAlignment="Top" Height="27" Margin="25,81,25,0">
            </TextBox>

            <Label Grid.Row="1" Height="15" Content="Password" FontWeight="Bold" Padding="0" HorizontalAlignment="Left" Margin="25,113,0,203"/>
            <UserControls:BindablePasswordBox ToolTip="{Binding ErrorCollection[Password]}" Password="{Binding Password, ValidatesOnDataErrors=True, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" Grid.Row="1" Height="27" Margin="25,133,25,171" />

            <Button Name="btnCreateAccount" Command="{Binding RegisterUserCommand}" Background="#106BA3" BorderThickness="0" Foreground="White" Content="Create account" FontWeight="Bold" HorizontalAlignment="Center" Height="27" Width="250" Margin="0,177,0,127" Grid.Row="1"/>

            <Rectangle HorizontalAlignment="Center" Height="1" Stroke="LightGray" VerticalAlignment="Top" Width="300" Margin="0,212,0,0" Grid.Row="1" />


            <Button Name="btnLogIn" Command="{Binding LogInUserCommand}" Background="#106BA3" BorderThickness="0" Foreground="White" Content="Log in" FontWeight="Bold" HorizontalAlignment="Center" Height="27" Width="250" Margin="0,221,0,83" Grid.Row="1" />
        </Grid>
    </Grid>
</Window>
